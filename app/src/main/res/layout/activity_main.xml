<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#baf8da"
    android:gravity="center"
    android:padding="16dp">



    <ImageView
        android:id="@+id/nature_image"
        android:layout_width="298dp"
        android:layout_height="200dp"
        android:src="@drawable/butterfly"
        android:contentDescription="Naturecore"

        />




    <TextView
        android:id="@+id/text_about_nature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where flowers bloom, so does hope."
        android:background="@color/cardview_dark_background"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginTop="18dp"/>





    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUE"
        android:background="@color/material_on_background_emphasis_high_type"
        android:layout_marginTop="20dp"/>

</LinearLayout>